# ~/.gitconfig

# NOTE: Must match with github section in ~/.ssh/config
[user]
    useConfigOnly = true
    name  = Wes Augur

[alias]
    up = pull --autostash --rebase --stat
    id = config user.email
    st = status
    df = diff
    br = branch
    co = checkout
    lg = log --graph --format='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ar) %C(blue)<%aN>%Creset'
    llg = lg --stat
    redline  = diff --color-words
    staged   = diff --staged
    undo     = restore --patch
    unstage  = restore --patch --staged
    recommit = commit --amend
    squash   = rebase --interactive  # usage: "git squash HEAD~N" where N is # of commits to squash
    push-force = push --force-with-lease

[core]
    pager = diff-highlight | $PAGER

[diff]
    algorithm = histogram
    mnemonicprefix = true

[stash]
    showPatch = true

[rebase]
    stat = true
    autoStash = true
    autoSquash = true

[merge]
    ff = only
    tool = smerge

[grep]
    lineNumber = true

[help]
    autocorrect = -1

[include]
    path = ~/.gitconfig.local

